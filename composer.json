{
    "name": "equites/core",
    "description": "Core framework",
    "authors": [
        {
            "name": "Laus Brandt"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=8.3",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-simplexml": "*"
    },
    "autoload": {
        "psr-4": {
            "Core\\": "src/Core",
            "Phdantic\\": "src/Phdantic"
        }
    },
    "require-dev": {
        "monolog/monolog": "^3.0@dev",
        "codeception/codeception": "^5.3@dev",
        "codeception/module-phpbrowser": "*",
        "codeception/module-asserts": "*",
        "open-telemetry/sdk": "^1.10.0",
        "open-telemetry/exporter-otlp": "^1.3.3",
        "open-telemetry/opentelemetry-logger-monolog": "1.*"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "tbachert/spi": true
        }
    }
}
